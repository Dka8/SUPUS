@using SUPUS.Abstraction
@model Employee
@{
    ViewBag.Title = "Update Employee";
}
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="FirstName" />
    <input type="hidden" asp-for="LastName" />
    <input type="hidden" asp-for="MiddleName" />

    <div class="container col-6 offset-3" style="margin-top:120px">
        <div class="card border-info">
            <div class="card-header text-white bg-info">
                <strong>Update User</strong>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <tr>
                        <th>Property</th>
                        <th>Value</th>
                    </tr>
                    <tr>
                        <td><strong>ID</strong></td>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <td><strong>Firstname</strong></td>
                        <td><input class="form-control" type="text" asp-for="FirstName" /></td>
                    </tr>
                    <tr>
                        <td><strong>Lastname</strong></td>
                        <td><input class="form-control" type="text" asp-for="LastName" /></td>
                    </tr>
                    <tr>
                        <td><strong>Middlename</strong></td>
                        <td><input class="form-control" type="text" asp-for="MiddleName" /></td>
                    </tr>
                    <tr>
                        <td><strong>Shift</strong></td>
                        <td>
                            <select class="form-control" id="sel1">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Update</strong></td>
                        <td><input type="submit" class="btn-sm btn-success" value="Update" /></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</form>