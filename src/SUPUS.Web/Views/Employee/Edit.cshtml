@using SUPUS.Abstraction
@model Tuple<Employee, IEnumerable<ShiftType>>
@{
    ViewBag.Title = "Update Employee";
}
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Item1.Id" />
    <input type="hidden" asp-for="Item1.FirstName" />
    <input type="hidden" asp-for="Item1.LastName" />
    <input type="hidden" asp-for="Item1.MiddleName" />

    <div class="container col-6 offset-3" style="margin-top:120px">
        <div class="card border-info">
            <div class="card-header text-white bg-info">
                <strong>Update User</strong>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <tr>
                        <th>Property</th>
                        <th>Value</th>
                    </tr>
                    <tr>
                        <td><strong>ID</strong></td>
                        <td>@Model.Item1.Id</td>
                    </tr>
                    <tr>
                        <td><strong>Firstname</strong></td>
                        <td><input class="form-control" type="text" asp-for="Item1.FirstName" /></td>
                    </tr>
                    <tr>
                        <td><strong>Lastname</strong></td>
                        <td><input class="form-control" type="text" asp-for="Item1.LastName" /></td>
                    </tr>
                    <tr>
                        <td><strong>Middlename</strong></td>
                        <td><input class="form-control" type="text" asp-for="Item1.MiddleName" /></td>
                    </tr>
                    <tr>
                        <td><strong>Shift</strong></td>
                        <td>
                            <select class="form-control" id="sel1">
                                @foreach (var shift in Model.Item2)
                                {
                                    <option>@String.Format("{0} ({1} - {2})", shift.Number, shift.Begin, shift.End)</option>                                    
                                }
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Update</strong></td>
                        <td><input type="submit" class="btn-sm btn-success" value="Update" /></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</form>