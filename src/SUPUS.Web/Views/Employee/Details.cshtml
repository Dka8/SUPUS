@using SUPUS.Abstraction
@model Employee
@{
    ViewBag.Title = "Employee Detail";
}
<div class="container col-6 offset-3" style="margin-top:120px">
    <div class="card border-secondary">
        <div class="card-header text-white" style="background-color: #ed1c24;">
            <strong>Employee Detail Information</strong>
        </div>
        <div class="card-body text-secondary">
            <table class="table table-bordered table-striped">
                <tr>
                    <th>Property</th>
                    <th>Value</th>
                </tr>
                <tr>
                    <td><strong>ID</strong></td>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <td><strong>LastName</strong></td>
                    <td>@Model.LastName</td>
                </tr>
                <tr>
                    <td><strong>FirstName</strong></td>
                    <td>@Model.FirstName</td>
                </tr>                
            </table>
        </div>
    </div>
</div>