@model IEnumerable<SUPUS.Abstraction.Employee>
    @{
        ViewBag.Title = "Сотрудники";
    }
    <div class="container" style="margin-top:60px">
        <div class="card border-secondary">
            <div class="card-header text-white" style="background-color: #ed1c24;">
                <strong>Сотрудники</strong><span>&nbsp;-&nbsp;Всего:@Model.Count()</span>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped table-hover">
                    <tr>
                        <th>Фамилия</th>
                        <th>Имя</th>                        
                    </tr>
                    @foreach (var u in Model)
                    {
                    <tr>
                        <td>@u.LastName</td>
                        <td>@u.FirstName</td>
                        <td><a class="btn-sm btn-primary" style="background-color: #ed1c24;" asp-controller="Employee" asp-action="Details" asp-route-id="@u.Id">Подробнее</a></td>
                        <td><a class="btn-sm btn-primary" style="background-color: #ed1c24;" asp-controller="Employee" asp-action="Timetable" asp-route-id="@u.Id">Время</a></td>
                        <td><a class="btn-sm btn-primary" style="background-color: #ed1c24;" asp-controller="Employee" asp-action="Edit" asp-route-id="@u.Id">Изменить</a></td>
                    </tr>
                    }
                </table>
            </div>
        </div>
    </div>

